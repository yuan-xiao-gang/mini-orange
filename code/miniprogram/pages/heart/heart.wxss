/* miniprogram/pages/heart/heart.wxss */
.heart {
  height: 200px;
  margin: 100px auto;
}
.heart > view {
  width: 20px;
  height: 20px;
  float: left;
  border-radius: 20px;
  margin-right: 10px;
}
.box1 {
  background: #f62e74;
  animation: love 4s infinite;
}
.box2 {
  background: #f45330;
  animation: love2 4s infinite;
  animation-delay: 0.15s;
}
.box3 {
  background: #ffc883;
  animation: love3 4s infinite;
  animation-delay: 0.3s;
}
.box4 {
  background: #30d268;
  animation: love4 4s infinite;
  animation-delay: 0.45s;
}
.box5 {
  background: #006cb4;
  animation: love5 4s infinite;
  animation-delay: 0.6s;
}
.box6 { 
  background: #784697;
  animation: love4 4s infinite;
  animation-delay: 0.75s;
}
.box7 {
  background: #ffc883;
  animation: love3 4s infinite;
  animation-delay: 0.9s;
}
.box8 {
  background: #f45330;
  animation: love2 4s infinite;
  animation-delay: 1.05s;
}
.box9 {
  background: #f62e74;
  animation: love 4s infinite;
  animation-delay: 1.2s;
}
@keyframes love {
  30%, 50% {
      height: 60px;
      transform: translateY(-30px);
  }
  75%, 100% {
      height: 20px;
      transform: translateY(0);
  }
}
@keyframes love2 {
  30%, 50% {
      height: 125px;
      transform: translateY(-62.5px);
  }
  75%, 100% {
      height: 20px;
      transform: translateY(0);
  }
}
@keyframes love3 {
  30%, 50% {
      height: 160px;
      transform: translateY(-75px);
  }
  75%, 100% {
      height: 20px;
      transform: translateY(0);
  }
}
@keyframes love4 {
  30%, 50% {
      height: 180px;
      transform: translateY(-60px);
  }
  75%, 100% {
      height: 20px;
      transform: translateY(0);
  }
}
@keyframes love5 {
  30%, 50% {
      height: 190px;
      transform: translateY(-45px);
  }
  75%, 100% {
      height: 20px;
      transform: translateY(0);
  }
}

#myCanvas {
  margin: 0 auto;
}